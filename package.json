{
  "name": "vidaextra",
  "version": "1.0.0",
  "description": "Aplicação PWA para cálculo de horas extras (AC-4), com histórico, exportação em PDF, suporte a desconto de pensão, e agora com Tailwind CSS e ESLint configurados para padronização visual e qualidade de código.",
  "main": "app.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/tailwind.css --minify",
    "dev:css": "tailwindcss -i ./src/input.css -o ./dist/tailwind.css --watch",
    "lint": "eslint . --ext .js",
    "serve": "serve -s -l 5500",
    "start": "npm run serve",
    "postinstall": "npm run build:css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ald3b4r4n/VidaExtra.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ald3b4r4n/VidaExtra/issues"
  },
  "homepage": "https://github.com/Ald3b4r4n/VidaExtra#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.16"
  }
}
