{
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "redirects": [
    { "source": "/", "destination": "/pages/home.html", "permanent": false }
  ],
  "rewrites": [
    { "source": "/api/firebase-config", "destination": "/api/config" },
    { "source": "/api/oauth-client-id", "destination": "/api/config" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/pages/login.html",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "unsafe-none"
        }
      ]
    },
    {
      "source": "/pages/oauth2callback.html",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "unsafe-none"
        }
      ]
    },
    {
      "source": "/dist/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/sendMonthlyReport",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cleanupOldData",
      "schedule": "0 3 1 * *"
    }
  ]
}
